
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/datatables.css" rel="stylesheet" />
<link href="~/Content/formsStyle.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />


<h2>GradoSeccion</h2>
<button type="button" onclick="openModal(0)" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Agregar</button>

<div id="div-table-gradoseccion"></div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">GradoSeccion:</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <table style="margin: auto">
                    <tr>
                        <td width="30%">ID</td>
                        <td width="70%"><input type="text" class="delete-info" id="txt-id-gradoseccion" readonly /></td>
                    </tr>
                    <tr>
                        <td width="30%">Grado</td>
                        <td width="70%"><select id="cbo-grado"></select></td>
                    </tr>
                    <tr>
                        <td width="30%">Seccion</td>
                        <td width="70%"><select id="cbo-seccion"></select></td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="sendData()">Guardar</button>
                <button type="button" id="btn-cancel" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/GradoSeccion.js"></script>
<script src="~/Scripts/datatables.min.js"></script>