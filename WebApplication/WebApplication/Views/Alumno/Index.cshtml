
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/datatables.css" rel="stylesheet" />
<link href="~/Content/formsStyle.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />

<h2>Alumnos:</h2>
<label>Seleccione Genero:</label>
<select id="cbo-gender"></select>
<input type="button" value="Buscar" onclick="filterByGender()" class="btn btn-success"/>
<input type="button" value="X" onclick="clearData()" class="btn btn-danger" />
<br />
<button type="button" onclick="openModal(0)" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Agregar</button>

<div id="div-table-alumno"></div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Curso:</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <table style="margin: auto">
                    <tr>
                        <td width="30%">ID</td>
                        <td width="70%"><input type="text" class="delete-info" id="txt-id-alumno" readonly /></td>
                    </tr>
                    <tr>
                        <td width="30%">Nombre</td>
                        <td width="70%"><input type="text" class="delete-info mandatory" id="txt-name-alumno" /></td>
                    </tr>
                    <tr>
                        <td width="30%">Primer Apellido</td>
                        <td width="70%"><input type="text" class="delete-info mandatory" id="txt-firstsurname-alumno" /></td>
                    </tr>
                    <tr>
                        <td width="30%">Segundo Apellido</td>
                        <td width="70%"><input type="text" class="delete-info mandatory" id="txt-secondsurname-alumno" /></td>
                    </tr>
                    <tr>
                        <td width="30%">Género</td>
                        <td width="70%"><select class="delete-info mandatory" id="cbo-gender-alumno"></select></td>
                    </tr>
                    <tr>
                        <td width="30%">Teléfono Padre</td>
                        <td width="70%"><input type="number" class="delete-info mandatory" id="num-phonefather-alumno" /></td>
                    </tr>
                    <tr>
                        <td width="30%">Teléfono Madre</td>
                        <td width="70%"><input type="number" class="delete-info mandatory" id="num-phonemother-alumno" /></td>
                    </tr>
                    <tr>
                        <td width="30%">Fecha nacimiento</td>
                        <td width="70%"><input type="text" class="delete-info mandatory datepicker" id="txt-birthday-alumno" /></td>
                    </tr>
                    <tr>
                        <td width="30%">Número hermanos</td>
                        <td width="70%"><input type="number" class="delete-info mandatory" id="num-siblings-alumno" /></td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="sendData()">Guardar</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/Alumno.js"></script>
<script src="~/Scripts/datatables.min.js"></script>