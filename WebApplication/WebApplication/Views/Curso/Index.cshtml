
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/datatables.css" rel="stylesheet" />
<link href="~/Content/formsStyle.css" rel="stylesheet" />

<h2>Cursos:</h2>
<input type="text" id="txt-name" placeholder="Busque por nombre"/>
<input type="button" id="btn-name" value="Buscar" onclick="searchByName()"/>
<input type="button" id="btn-name" class="btn btn-danger" value="X" onclick="clearSearch()" />
<br />
<button type="button" onclick="openModal(0)" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Agregar</button>

<div id="div-table-curso"></div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Curso:</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <table style="margin: auto">
                    <tr>
                        <td width="30%">ID</td>
                        <td width="70%"><input type="text" class="delete-info" id="txt-id-curso" readonly /></td>
                    </tr>
                    <tr>
                        <td width="30%">Nombre</td>
                        <td width="70%"><input type="text" class="delete-info mandatory" id="txt-name-curso" /></td>
                    </tr>
                    <tr>
                        <td width="30%">Descripcion</td>
                        <td width="70%"><input type="text" class="delete-info mandatory" id="txt-description-curso" /></td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="sendData()">Guardar</button>
                <button type="button" id="btn-cancel" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="~/Scripts/Curso.js"></script>
<script src="~/Scripts/datatables.min.js"></script>
